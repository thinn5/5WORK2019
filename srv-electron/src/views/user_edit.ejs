<% include partials/_header %>
<div class="container mt-5">
    <div class='row'>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post">
                        <div class="form-group">
                            <input type="text" id="username" name="username" placeholder="Username" class="form-control" value="<%= data.username %>" required>
                        </div>
                        <div class="form-group">
                            <input type="password" id="password" name="password" placeholder="Password" class="form-control" value="<%= data.password %>" required>
                        </div>
                        <div class="form-group">
                            <input type="text" id="firstname" name="firstname" placeholder="First Name" class="form-control" value="<%= data.firstname %>" required>
                        </div>
                        <div class="form-group">
                            <input type="text" id="lastname" name="lastname" placeholder="Last Name" class="form-control" value="<%= data.lastname %>" required>
                        </div>
                        <div class="form-group">
                            <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= data.email %>" required>
                        </div>
                        <div class="form-group">
                            <input type="hidden" id="updatedat" name="updatedat" class="form-control" value="<%= data.updatedat = new Date().toJSON().slice(0, 19).replace('T', ' '); %>" required>
                        </div>
                        <script>
                        </script>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Update user</button>
                        </div>                       
                    </form>                    
                </div>
            </div>
        </div>

    </div>
</div>
<% include partials/_footer %>