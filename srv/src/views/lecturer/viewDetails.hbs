<!-- ***** Special Area Start ***** -->
<section class="special-area bg-white section_padding_100" id="details">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Section Heading Area -->
                <div class="section-heading text-center">
                    <h2>Details</h2>
                    <div class="line-shape"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Special Description Area -->
    <div class="special_description_area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="container-fluid">
                        <div style="background-color: #ccc; height: 54px; line-height: 54px; padding-left: 1rem">
                            <i class="fa fa-arrow-circle-left fa-2x"
                                style="vertical-align: middle; padding-right: 0.36rem"></i>
                            <a href="/lecturers/index">Index</a><i class="fa fa-angle-right"></i>
                            <a href="/lecturers/index#srv">SRV</a><i class="fa fa-angle-right"></i>Details</a>
                        </div>
                        {{#if crns}}
                        <table
                            class="table dataTable datatable-button-html5-columns collapsed display compact nowrap table-striped table-hover">
                            <caption>List of Students</caption>
                            <thead class="thead-dark">
                                <tr>
                                    <th>CRN</th>
                                    <th>Tafe Comp Code</th>
                                    <th>Term</th>
                                    <th>Year</th>
                                    <th>Grade</th>
                                    <th>Grade Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each crns}}
                                <tr>
                                    <td>{{CRN}}</td>
                                    <td>{{TafeCompCode}}</td>
                                    <td>{{TermCode}}</td>
                                    <td>{{TermYear}}</td>
                                    <td>{{Grade}}</td>
                                    <td>{{timeagoFormatted GradeDate}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        {{else}}
                        <h3 class="text-center">Whoops... There are not CRNS for the selected student.</h3>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


