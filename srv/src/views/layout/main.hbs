<!DOCTYPE html>
<html lang="en">

<head>
    {{> metas }}

    <title>{{> title }}</title>

    {{> css }}

</head>

<body>

    {{> navigation }}
    {{#if success}}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{success}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria=hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{{ body }}}

    {{> js }}

</body>

</html>